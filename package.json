{
  "name": "gpt-help",
  "displayName": "gpt-help",
  "description": "A GPT help sample extension to demonstrate using Svelte with the Webview UI Toolkit for VS Code.",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hananmil/gpt-help"
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gpt-help-extention.showHelp",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpt-help-extention.showHelp",
        "title": "GPT help (Svelte): Show"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run dev",
    "start:webapi": "cd web-api && npm run dev",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "start:api": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" --ext ts --pretty --emit src/index.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.22",
    "@types/vscode": "^1.46.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "markdown-it": "^14.0.0",
    "open": "^10.0.4",
    "openai": "^4.28.0",
    "socket.io-client": "^4.7.4",
    "ts-node": "^10.9.1",
    "ws": "^8.13.0"
  }
}
